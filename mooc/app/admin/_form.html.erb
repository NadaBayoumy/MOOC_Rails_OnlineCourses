<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :birthdate %><br>
    <%= f.date_field :birthdate %>
  </div>

  <div class="field">
      <%= f.radio_button :gender, true, :class => 'form-control radio-inline' %> Male
      <%= f.radio_button :gender, false, :class => 'form-control radio-inline' %>Female
  </div>

  <div class="field">
    <%= f.file_field :picture %><br>
    <%= f.hidden_field :picture_cache %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
