<p id="notice"><%= notice %></p>

<% if @courses.count > 0 %>
<h1>Listing Courses</h1>
<% end %>



<table class="table table-bordered" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.try(:title) %></td>
        <td><%= course.try(:user).try(:name) %></td>
        


        
        <!--<td><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> <span class="glyphicon-class"><%= link_to 'Show', lectures_path(:course_id => course.id)
         %></td> </span></td> -->

        <td><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> <span class="glyphicon-class"><%= link_to 'Show', course_path(course)
         %></td> </span></td>

                
        <% if course.try(:user).try(:id) == current_user.try(:id) && current_user.try(:usertype)  == 2 %>

                <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <span class="glyphicon-class"><%= link_to 'Edit', edit_course_path(course) %> </span></td>

                <td><span class="glyphicon glyphicon-off" aria-hidden="true"></span> <span class="glyphicon-class"><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>




<% if current_user.try(:id) && current_user.try(:usertype)  == 2 %>


    <%= link_to "New Course", new_course_path , class: "btn btn-primary btn-lg homebuttons" %>



<% end %>