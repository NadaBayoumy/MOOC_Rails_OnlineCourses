<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-bordered" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Birthdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.try(:email) %></td>
        <td><%= user.try(:birthdate) %></td>
        
        <% if user.try(:id) == current_user.try(:id) %>
            <td><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> <span class="glyphicon-class"><%= link_to 'Show', user %> </span></td>

            <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <span class="glyphicon-class"><%= link_to 'Edit', edit_user_path(user) %> </span></td>

            <td><span class="glyphicon glyphicon-off" aria-hidden="true"></span> <span class="glyphicon-class"><%= link_to 'Deactivate My Account', user, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
